{# admin/_language_switcher.html.twig #}
<form method="get" action="{{ app.request.uri }}" class="language-switcher-form">
    <select name="_locale" onchange="this.form.submit()" class="language-switcher-select">
        {% for locale, label in {'en': 'English', 'lv': 'Latvie≈°u'} %}
            <option value="{{ locale }}" {% if app.request.locale == locale %}selected{% endif %}>
                {{ label }}
            </option>
        {% endfor %}
    </select>
</form>

<style>
.language-switcher-form {
    display: inline-block;
    margin-left: 10px;
    margin-top:6px;
}

.language-switcher-select {
    padding: 4px 8px;
    border-radius: 4px;
    border: 1px solid #ccc;
    background-color: #fff;
    font-size: 14px;
    cursor: pointer;
    transition: border-color 0.2s;
}

.language-switcher-select:hover {
    border-color: #888;
}

.language-switcher-select:focus {
    outline: none;
    border-color: #0056b3;
    box-shadow: 0 0 3px rgba(0, 86, 179, 0.5);
}
</style>
